{% extends 'base.html.twig' %}

{% block title %}Entreprise{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
        <ol class="breadcrumb m-1">
            <li class="breadcrumb-item"><a href="{{ path('contact')}}">Contact</a></li>
            <li class="breadcrumb-item"><a href="{{ path('entreprise_index')}}">Liste des entreprises</a></li>
            <li class="breadcrumb-item active" aria-current="page">Fiche entreprise</li>
        </ol>
</nav>
    <h1>{{entreprise.denominationSociale}}</h1>

    <table class="table">
        <tbody>
            
            <tr>
                <th>DenominationSociale</th>
                <td>{{ entreprise.denominationSociale }}</td>
            </tr>
            <tr>
                <th>Siren</th>
                <td>{{ entreprise.siren }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ entreprise.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ entreprise.prenom }}</td>
            </tr>
            <tr>
                <th>NomFacultatif</th>
                <td>{{ entreprise.nomFacultatif }}</td>
            </tr>
            <tr>
                <th>PrenomFacultatif</th>
                <td>{{ entreprise.prenomFacultatif }}</td>
            </tr>
            <tr>
                <th>Mail</th>
                <td>{{ entreprise.mail }}</td>
            </tr>
            <tr>
                <th>MailFacultatif</th>
                <td>{{ entreprise.mailFacultatif }}</td>
            </tr>
            <tr>
                <th>Tel</th>
                <td>{{ entreprise.tel }}</td>
            </tr>
            <tr>
                <th>TelFacultatif</th>
                <td>{{ entreprise.telFacultatif }}</td>
            </tr>
            <tr>
                <th>Activite</th>
                <td>{{ entreprise.activite }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('entreprise_index') }}">Retour</a>

    <a href="{{ path('entreprise_edit', {'id': entreprise.id}) }}">Modifier</a>

    {{ include('entreprise/_delete_form.html.twig') }}
{% endblock %}
