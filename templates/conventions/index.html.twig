{% extends 'base.html.twig' %}

{% block title %}Liste des conventions{% endblock %}

{% block body %}
<nav aria-label="breadcrumb">
        <ol class="breadcrumb m-1">
            <li class="breadcrumb-item"><a href="{{ path('gestion')}}">Gestion</a></li>
            <li class="breadcrumb-item active" aria-current="page">Liste complète</li>
        </ol>
</nav>

    <h1>Liste des conventions</h1>

    <div class="d-flex justify-content-evenly align-items-center col-10 mt-5">
        {# Recherche #}
        <div class="col-3">
            {{ form(form) }}
        </div>
        <div class="col-3">
            <a href="{{ path('conventions_new') }}" class="btn_menu">New</i></a>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="card text-center col-10">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>LieuFormation</th>
                        <th>NomParticipants</th>
                        <th>PrenomParticipants</th>
                        <th>actions</th>
                    </tr>
                </thead>
                <tbody>
                {% for convention in conventions %}
                    <tr>
                        <td>{{ convention.id }}</td>
                        <td>{{ convention.lieuFormation }}</td>
                        <td>{{ convention.nomParticipants }}</td>
                        <td>{{ convention.prenomParticipants }}</td>
                        <td>
                            <a href="{{ path('conventions_show', {'id': convention.id}) }}"data-bs-toggle="tooltip" title="voir"><i class="far fa-eye"></i></a>
                            <a href="{{ path('conventions_edit', {'id': convention.id}) }}"data-bs-toggle="tooltip" title="modifier"><i class="far fa-edit"></i></a>
                            <a href="#"data-bs-toggle="tooltip" title="générer PDF"><i class="far fa-file-pdf"></i></a>
                            <a href="#"data-bs-toggle="tooltip" title="éditer convention"><i class="fas fa-file-invoice"></i></a>
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="5">no records found</td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>

{% endblock %}
